<Window x:Class="WPFWorkspace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFWorkspace"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="pnlMainGrid" Background="Red" MouseUp="pnlMainGrid_MouseUp">

        <TextBlock HorizontalAlignment="left" VerticalAlignment="Center" FontSize="30">Hello, Good Morning..!</TextBlock>

        <Button>
            <Button.FontWeight>Bold</Button.FontWeight>
            <Button.Content>Sign In</Button.Content>
            
        </Button>

        <Button>
            <Button.FontWeight>Bold</Button.FontWeight>
            <Button.Content>
                <WrapPanel>
                    <TextBlock Foreground="Aqua">List Item1</TextBlock>
                    <TextBlock Foreground="AliceBlue">List Item 2</TextBlock>
                    <TextBlock>Button</TextBlock>
                </WrapPanel>
            </Button.Content>
        </Button>
        
    </Grid>
</Window>
